<% if @user.errors.any? %> <!--何か一つでも失敗したとき-->
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>. <!--何個のエラーがあるか表示-->
    </div>
    <ul> <!--エラーをリスト表示する-->
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>